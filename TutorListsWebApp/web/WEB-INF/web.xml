<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>ac.za.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTutorServlet</servlet-name>
        <servlet-class>ac.za.tut.web.AddTutorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionServlet</servlet-name>
        <servlet-class>ac.za.tut.web.EndSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTutorServlet</servlet-name>
        <servlet-class>ac.za.tut.web.SearchTutorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllTutorsServlet</servlet-name>
        <servlet-class>ac.za.tut.web.ViewAllTutorsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTutorServlet</servlet-name>
        <servlet-class>ac.za.tut.web.DeleteTutorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TotalNumberOfTutorsServlet</servlet-name>
        <servlet-class>ac.za.tut.web.TotalNumberOfTutorsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>ac.za.tut.web.StatisticsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTutorServlet</servlet-name>
        <url-pattern>/AddTutorServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionServlet</servlet-name>
        <url-pattern>/EndSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTutorServlet</servlet-name>
        <url-pattern>/SearchTutorServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllTutorsServlet</servlet-name>
        <url-pattern>/ViewAllTutorsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTutorServlet</servlet-name>
        <url-pattern>/DeleteTutorServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TotalNumberOfTutorsServlet</servlet-name>
        <url-pattern>/TotalNumberOfTutorsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/StatisticsServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
